@model IEnumerable<Hiriart_Corales_MVCWebApp_AgendaPersonal.Models.Serie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.TextBox("Titulo")
    <input type="submit" value="Buscar" />
}
<table class="table">
    <tr>
        <th>
            Título
        </th>
        <th>
            Eventos de la serie
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>              
                @Html.DropDownListFor(modelItem => item.Evento, new SelectList(item.Evento))
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SerieID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SerieID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SerieID })
            </td>
        </tr>
    }

</table>
